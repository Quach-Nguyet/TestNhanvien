<table class="table table-responsive nowrap table-striped table-bordered table-sm paginated" id="bangNhanVien" cellspacing="0">
    <thead>
        <tr style="text-align: center ">
            <th>Mã nhân viên</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>SĐT</th>
            <th>Chức vụ</th>
            <th id="nam" style="text-align:center">Số năm công tác</th>
            <th>Lựa chọn</th>
        </tr>
    </thead>
    <tbody id="tableNhanVien">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoVaTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChucVu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoNamCongTac)
                </td>
                <td style="text-align: center">
                    <button class="btn btn-outline-secondary" onclick="editNV('@item.MaNhanVien',this)">
                        Sửa
                    </button>
                    <button class="btn btn-outline-danger" onclick="deleteNV('@item.MaNhanVien', this)">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>
