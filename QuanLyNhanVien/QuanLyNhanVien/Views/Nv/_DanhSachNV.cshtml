
@model List<QuanLyNhanVien.Models.NhanVien>

<table class="table table-responsive nowrap table-striped table-bordered table-sm paginated" id="bangNhanVien"  cellspacing="0">
    <thead>
        <tr>
            <th>Mã nhân viên</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>SĐT</th>
            <th>Chức vụ</th>
            <th id="nam" style="text-align:center">Số năm công tác</th>
            <th>Lựa chọn</th>
        </tr>
    </thead>
    <tbody id="tableNhanVien">
        @foreach (var item in Model) { 
            <tr>
                <td>@item.MaNhanVien</td>
                <td>@item.HoVaTen</td>
                <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                <td>@item.DiaChi</td>
                <td>@item.SoDienThoai</td>
                <td>@item.ChucVu</td>
                <td>@item.SoNamCongTac</td>
                <td>
                    <button class="btn btn-outline-secondary" onclick="editNV('@item.MaNhanVien')">Sửa</button>
                    <button class="btn btn-outline-danger" onclick="deleteNV('@item.MaNhanVien', this)">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>



