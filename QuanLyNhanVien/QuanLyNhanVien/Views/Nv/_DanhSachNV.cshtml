@model List<QuanLyNhanVien.Models.NhanVienModelView>

<table class="table table-responsive nowrap table-striped table-bordered table-sm paginated" id="bangNhanVien" cellspacing="0">
    <thead>
        <tr style="text-align: center ">
            <th>STT</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>SĐT</th>
            <th>Địa chỉ</th>
            <th>Chức vụ</th>
            <th>Phòng ban</th>
            <th>Số năm công tác</th>
            <th>Lựa chọn</th>
        </tr>
    </thead>
    <tbody id="tableNhanVien">
        @{int index = ViewBag.Stt; }
        @foreach (var item in Model)
        {
            <tr>
                <td type="hide" id="Stt">
                    @index
                    @{index++;}
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoVaTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChucVu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ten_phong_ban)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.SoNamCongTac)
                </td>
                <td style="text-align: center">
                    <button class="btn btn-outline-secondary btnSua" data-id="@item.MaNhanVien">
                        Sửa
                    </button>
                    <button class="btn btn-outline-danger btnXoa" data-id="@item.MaNhanVien">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
@*Xuất Ex*@
<a class="btn btn-primary btn-outline-light" id="Export"> Export Excel </a>
@*<Modal pagination*@
<nav aria-label="Page navigation example" id="phan_trang" style="float:right">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" onclick="previsous()" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Trước</span>
            </a>
        </li>
        @for (int item = 1; item <= ViewBag.TotalPages; item++)
        {
            <li class="page-item"><a class="page-link" onclick="pagination(@item)">@item</a></li>
        }
        <li class="page-item">
            <a class="page-link" onclick="next(@ViewBag.TotalPages)" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Sau</span>
            </a>
        </li>
    </ul>
</nav>


